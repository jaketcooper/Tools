<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/colorWhiteText" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <ProgressBar android:id="@+id/cup_timer_progress_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:max="100" android:progress="0" style="?android:attr/progressBarStyleHorizontal"/>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <TextView android:textSize="20sp" android:gravity="center" android:id="@+id/preview_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/cuptimer_info"/>
        <ImageView android:gravity="center" android:id="@+id/iv_faces" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY" android:adjustViewBounds="true" android:contentDescription="@string/cuptimer"/>
    </LinearLayout>
</LinearLayout>
