        <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/speed"/>
        <NumberPicker android:id="@+id/circlesSpeed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:ems="10" android:inputType="number"/>
    </LinearLayout>
</LinearLayout>
